<% require 'number_formatter' %>
<table cellspacing="10px">
  <tr>
    <th>Instruction</th>
    <th>Time</th>
    <th>Total Time</th>
  </tr>

<% total_time = 0 %>
<% @result.each do |result| %>
  <tr>
    <% total_time += result[:Time] %>
    <td><%=h result[:Method] %>
    	<% if result.has_key? :Alert and result[:Alert] != nil %>
    		<%= link_to result[:Alert][:announcement].to_s, :action => "route_status", :route => result[:Route], :class => 'alert_link' %>
    	<% end %>
    </td>
    <td><%=h result[:Time].format_as_time %></td>
    <td><%=h total_time.format_as_time %></td>
  </tr>
<% end %>
</table>

<%= link_to "Back to Main Page", :action => 'index', :controller => 'application' %>